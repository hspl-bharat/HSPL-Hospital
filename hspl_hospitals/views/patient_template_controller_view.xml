<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="patients_controller_view" name="patients">
<!--        <t t-call="website.layout">-->
        <div class="container">
                <table>
                <thead>
                    <tr>
                        <td>
                            <h2>Name</h2>
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="patients" t-as="patient">
                        <tr>
                            <td>
                                <t t-esc="patient.name"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
<!--        </t>-->
    </template>

</odoo>