<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cancel_appointment_form" model="ir.ui.view">
        <field name="name">cancel.appointment.wizard.form</field>
        <field name="model">cancel.appointment.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="appointment_id" domain="[('status', 'in', ['draft'])]"/>
                            <field name="reason"/>
                        </group>
                        <group>
                            <field name="date_cancel"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_cancel" string="Cancel Appointment" type="object" data-hotkey="q" class="btn btn-primary"/>
                        <button string="Discard" special="cancel" data-hotkey="z" class="btn btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_cancel_appointment" model="ir.actions.act_window">
        <field name="name">Cancel Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cancel.appointment.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

</odoo>