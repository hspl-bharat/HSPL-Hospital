<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="qweb_patient_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                     <t t-call="web.external_layout">
                        <div class="page">
                            <h1><span t-field="o.name"/></h1>
                            <ul>
                                <li>Date : <span t-field="o.date"/></li>
                                <li>Name : <span t-field="o.name"/></li>
                                <li>Age : <span t-field="o.age"/></li>
                                <li>Gender : <span t-field="o.gender"/></li>
                                <li>DOB : <span t-field="o.date_of_birth"/></li>
                                <li>Email : <span t-field="o.email"/></li>
                                <li>Ref : <span t-field="o.ref"/></li>
                                <li>Tags : <span t-field="o.tag_ids"/></li>
                            </ul>
                        </div>
                     </t>
                </t>
            </t>
        </template>
    </data>

    <report
            id="qweb_print_patient_reports_id"
            model="hspl.hospital.data"
            report_type="qweb-pdf"
            string="Print Patient Report"
            name="hspl_hospitals.qweb_patient_report_template"
            file="hspl_hospitals.qweb_patient_report_template"
    />
</odoo>